<div class="card my-5">
  <div class="card-body">
    <h1>Editar Post</h1>

    <%= render 'form', post: @post %>
<br>

    <div class="mt-2">
      <%= link_to 'Show', @post, class: 'btn btn-info mr-2' %>
      <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mr-2' %> 
      <%= link_to 'Back', posts_path, class: 'btn btn-success' %>

    </div>
  </div>
</div>